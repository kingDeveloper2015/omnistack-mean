div.navbar.navbar-default.navbar-static-top(ng-controller='NavbarCtrl' autoscroll='true')
  div.container
    div.navbar-head(ng-class='{clearfix: !isCollapsed}')
      button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/', ng-class='{active: isActive("")}') Omninox 
        span.avenir-light(style="font-size:0.6em;") BETA

    div#navbar-main.navbar-collapse(ng-class='{collapse: isCollapsed}')
      ul.nav.navbar-nav(ng-class='{"text-center": !isCollapsed}')
        li(ng-repeat='item in menu', ng-class='{active: isActive("{{item.link}}")}')
          a(ng-href='{{item.link}}') {{item.title}}

        //- custom link for blog that opens in new tab b/c of firefox back button issue
        li
          a(href='/blog', target='_blank', style='target-new: tab;') Blog
        //- li(ng-show='isLoggedIn()', ng-class='{active: isActive("pricing")}')
        //-   a(href='/pricing/') Pricing
        li(ng-class='{active: isActive("resources")}')
          a(href='/resources/')
            | Resources
        li(ng-show='isAdmin() || isTeacher()', ng-class='{active: isActive("teacher")}')
          a(href='/teacher') Teacher
        li(ng-show='isAdmin() || isStudent()', ng-class='{active: isActive("student")}')
          a(href='/student') Student
          
        li(ng-show='isAdmin()', ng-class='{active: isActive("admin")}')
          a(href='/admin') Admin

      ul.nav.navbar-nav.navbar-right(ng-class='{"text-center": !isCollapsed}')
        li(ng-hide='isLoggedIn()', ng-class='{active: isActive("signup")}')
          a(href='/signup').navbar-emphasis Sign up

        li(ng-hide='isLoggedIn()', ng-class='{active: isActive("login")}')
          a(href='/login').navbar-emphasis Login

        //- li(ng-show='isLoggedIn()', ng-class='{active: isActive("account")}')
        //-   a(href='/account')
        //-     span(ng-if='userName.indexOf(".") > -1')
        //-       | Hello {{ userName.split(' ')[1] }}
        //-     span(ng-if='userName.indexOf(".") == -1')
        //-       | Hello {{ userName.split(' ')[0] }}
            
        li(ng-show='isLoggedIn()', ng-class='{active: isActive("settings")}')
          a(href='/settings') Settings&nbsp;
            span.glyphicon.glyphicon-cog

        li(ng-show='isLoggedIn()', ng-class='{active: isActive("logout")}')
          a(href='', ng-click='logout()') Logout
