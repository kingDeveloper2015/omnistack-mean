{{!-- About Page Template --}}

{{!< default}}

<div class="container-wrap">
  <div class="container">
    <main class="content" role="main">

      <article class="{{post_class}}">
        <div class="post-wrap">

          {{#post}}
            
            <section class="post-content">
              <figure class="image">
                {{#if image}}<img src="{{image}}" alt="featured" class="featured-img-for-global-bg">{{/if}}
              
                 {{! removed the below in favor of using Ghost's editor for about image}}
                {{!-- <img src="{{author.cover}}" alt="featured"> --}}
              </figure>
              <div class="padding-wrap--target">
                {{content}}
                {{> toc }}
              </div>
            </section>

          {{/post}}

        </div>

      </article>

    </main>
  </div> {{! END CONTAINER}}
</div> {{! END CONTAINER WRAP}}