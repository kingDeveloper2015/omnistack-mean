  <div class="slideout-heading">
    {{!-- <span class="icon icon-pricetags"></span> --}}
    Filter<br>
    <span class="nano">by</span>
  </div>

  <hr class="divider--slideout">


  <ul class="unstyled" id="filterList"></ul>

